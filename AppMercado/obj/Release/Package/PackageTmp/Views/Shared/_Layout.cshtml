<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AppMercado</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:lightgray">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" style="background-color:lightgray" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("AppMercado", "Index", "Produto", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"style="background-color:lightgray">
                    <li>@Html.ActionLink("Produto", "Index", "Produto")</li>
                    <li>@Html.ActionLink("Contato", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="oi">
            <img class="img-circle" alt="Responsive image" center-block style="margin-top:auto;" src="http://elasticbeanstalk-sa-east-1-603429834916.s3.amazonaws.com/sistema/imagens_anuncio/260162/mercado-costa-09.jpg" width="140" height="140">
        </div> 
           @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - AppMercado</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
