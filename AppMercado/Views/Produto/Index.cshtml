@model IEnumerable<AppMercado.Models.Produto>


@{
    ViewBag.Title = "Produto";

}

<div class="row">
    <div class="col-sm">
        <h2 class="text-center text-primary">Mercadorias</h2>

        <td>
            <p>
                <strong>
                    @Html.ActionLink("Novo Produto", "Create", null, new { @class = "btn btn-success btn-sm" })
                </strong>
            </p>

        </td>

        <div class="table-responsive-sm">
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.TP_Mercadoria)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.NM_Mercadoria)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Quantidade)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Descrição)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Preço)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.TP_Negocio)
                        </th>
                        <th scope="col">
                            Ação
                        </th>
                    </tr>
                </thead>
                
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TP_Mercadoria)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NM_Mercadoria)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantidade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descrição)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Preço)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TP_Negocio)
                        </td>
                        <td>

                            <p>
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm " })
                                @Html.ActionLink("Exibir", "Details", new { id = item.Id }, new { @class = "btn btn-info   btn-sm" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                            </p>
                            <p>

                            </p>
                            <p>

                            </p>
                        </td>
                    </tr>
                    }
                </tbody>
                
            </table>
        </div>
        
    </div>
    
</div>





