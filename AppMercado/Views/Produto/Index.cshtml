@model IEnumerable<AppMercado.Models.Produto>

@{
    ViewBag.Title = "Produto";
    <img class="img-responsive" center-block style="margin-top:auto;" src="http://elasticbeanstalk-sa-east-1-603429834916.s3.amazonaws.com/sistema/imagens_anuncio/260162/mercado-costa-09.jpg" width="140" height="140">
}

<h2>Mercadorias</h2>

<p>
    @Html.ActionLink("Novo Produto", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TP_Mercadoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NM_Mercadoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descrição)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preço)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TP_Negocio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TP_Mercadoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NM_Mercadoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descrição)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Preço)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TP_Negocio)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes","Details", new { id=item.Id }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
