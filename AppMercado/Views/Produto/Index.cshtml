@model IEnumerable<AppMercado.Models.Produto>

@{
    ViewBag.Title = "Produto";
    <img class="img-circle" center-block style="margin-top:auto;" src="http://elasticbeanstalk-sa-east-1-603429834916.s3.amazonaws.com/sistema/imagens_anuncio/260162/mercado-costa-09.jpg" width="140" height="140">
    <style type="text/css"></style>
}

<h2>Mercadorias</h2>

<p>
    
    @Html.ActionLink("Novo Produto", "Create",new {@class ="btn btn-sucess"})
   
</p>


<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TP_Mercadoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NM_Mercadoria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descrição)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preço)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TP_Negocio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TP_Mercadoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NM_Mercadoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descrição)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Preço)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TP_Negocio)
        </td>
        <td>
            <p>@Html.ActionLink("Editar", "Edit"     ,new  {id=item.Id }, new { @class ="btn btn-primary" })</p>
            <p>@Html.ActionLink("Detalhes","Details" , new { id=item.Id }, new { @class ="btn btn-info"   })</p> 
            <p>@Html.ActionLink("Deletar", "Delete"  , new { id=item.Id },  new { @class ="btn btn-warning"})</p>
        </td>
    </tr>
}

</table>
