@model IEnumerable<AppMercado.Models.Produto>


@{
    ViewBag.Title = "Produto";

}

    <div class="row">
        <div class="container">
            <div class="col-sm">
                <h2 class="text-center text-primary">Lista de Compras</h2>

                <td>
                    <p>
                        <strong>
                            <button type="button" class="btn btn-outline-success waves-effect btn-sm create">NOVO PRODUTO&nbsp;<i class="far fa-plus-square"></i></button>
                        </strong>
                    </p>

                </td>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead class="black white-text">
                            <tr>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.TP_Mercadoria)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.NM_Mercadoria)
                                </th>                                
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Descrição)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Preço)
                                </th>                                
                                <th scope="col">
                                    AÇÃO
                                </th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TP_Mercadoria)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NM_Mercadoria)
                                    </td>                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descrição)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Preço)
                                    </td>                                    
                                    <td>
                                        <p>
                                            <button type="button" class="btn btn-outline-info waves-effect btn-sm details" data-id="@item.Id">MOSTRAR&nbsp;<i class="fas fa-file"></i></button>
                                            <button type="button" class="btn btn-outline-primary waves-effect btn-sm edit" data-id="@item.Id">ATUALIZAR&nbsp;<i class="fas fa-edit"></i></button>
                                            <button type="button" class="btn btn-outline-danger waves-effect btn-sm delete" data-id="@item.Id">REMOVER&nbsp;<i class="fas fa-trash"></i></button>
                                        </p>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <div id="modal" class="modal fade" role="dialog" />

                @section scripts{
                    <script>
                        $(function () {
                            $(".create").click(function () {
                                $("#modal").load("/Produto/Create", function () {
                                    $("#modal").modal();
                                })
                            });

                            $(".details").click(function () {
                                var id = parseInt($(this).attr("data-id"));

                                $("#modal").load("/Produto/Details/" + id, function () {
                                    $("#modal").modal();
                                })
                            });

                            $(".edit").click(function () {
                                var id = parseInt($(this).attr("data-id"));

                                $("#modal").load("/Produto/Edit/" + id, function () {
                                    $("#modal").modal();
                                })
                            });

                            $(".delete").click(function () {
                                var id = parseInt($(this).attr("data-id"));

                                $("#modal").load("/Produto/Delete/" + id, function () {
                                    $("#modal").modal();
                                })
                            });

                        })
                    </script>
                }

            </div>
        </div>
    </div>






